{
  "name": "coderhouse-backend",
  "version": "1.0.0",
  "description": "Coderhouse project",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "node app.js",
    "devFirebase": "nodemon app.js -t firebase",
    "test": "mocha ./src/test/*.test.js --reporter mochawesome --output /src/test/report/mochawesome-report",
    "forever": "forever start app.js -m 'cluster' --watch && forever list",
    "foreverStop": "forever stopall && forever list",
    "pm2Fork": "pm2 start app.js --name='ForkServer' --watch -- 8080 && pm2 start app.js --name='ForkServer2' --watch -- 8081",
    "pm2Cluster": "pm2 start app.js --name='Server1' -i max --watch -- 8080",
    "pm2Stop": "pm2 kill",
    "autocannon": "autocannon -d 20 -c 100 http://localhost:8080/info",
    "tableProd": "node ./src/api/batch/createTableProducts.js",
    "tableCarrito": "node ./src/api/batch/createTableCarritos.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucaspiritogit/ch-backend.git"
  },
  "author": "lpirito",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lucaspiritogit/ch-backend/issues"
  },
  "homepage": "https://github.com/lucaspiritogit/ch-backend#readme",
  "dependencies": {
    "@faker-js/faker": "^7.5.0",
    "autocannon": "^7.10.0",
    "axios": "^1.2.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^7.6.2",
    "body-parser": "^1.20.0",
    "cluster": "^0.7.7",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "express-handlebars": "^6.0.6",
    "express-session": "^1.17.3",
    "firebase-admin": "^11.2.0",
    "graphql": "^16.6.0",
    "intl-tel-input": "^17.0.19",
    "knex": "^2.3.0",
    "log4js": "^6.7.0",
    "minimist": "^1.2.7",
    "mochawesome": "^7.1.3",
    "mongoose": "^6.6.3",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "node-fetch": "^3.2.10",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.19",
    "normalizr": "^3.6.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pug": "^3.0.2",
    "socket.io": "^4.5.1",
    "sqlite3": "^5.1.1",
    "twilio": "^3.83.3"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3"
  }
}
